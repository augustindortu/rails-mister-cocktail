<h1>New Cocktail</h1>

<div class="container">
  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Create a Cocktail", class: "btn btn-primary" %>
  <% end %>

  <div><%= link_to 'Go back to Cocktails list', cocktails_path %></div>
</div>
