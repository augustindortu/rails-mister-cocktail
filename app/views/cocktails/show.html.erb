<h1><%= @cocktail.name %></h1>

<% @doses.each do |dose| %>
  <li><%= dose.description %> </li>
<% end %>

<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: 'btn btn-primary w-100'%>
  <% end %>
</div>

<%= link_to 'Go Back to Cocktails List', cocktails_path %>
